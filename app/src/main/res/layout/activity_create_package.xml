<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name" />

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description" />

        <EditText
            android:id="@+id/discountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount"
            android:inputType="number" />



        <Spinner
            android:id="@+id/categorySpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category" />

        <EditText
            android:id="@+id/eventTypeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event Type" />

        <EditText
            android:id="@+id/priceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/imagesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Images (comma separated URLs)" />

        <EditText
            android:id="@+id/bookingDeadlineEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Booking Deadline" />

        <EditText
            android:id="@+id/cancellationDeadlineEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cancellation Deadline" />

        <CheckBox
            android:id="@+id/visibleEditText"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100px"
            android:hint="Visible" />

        <CheckBox
            android:id="@+id/availableEditText"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-100px"
            android:hint="Available" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose services in package: "/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose products in package: "/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewForProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/createPackageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Package" />

    </LinearLayout>
</ScrollView>
