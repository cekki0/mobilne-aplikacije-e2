<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category" />

        <TextView
            android:id="@+id/subCategoryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subcategory" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description" />

        <TextView
            android:id="@+id/galleryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gallery" />

        <TextView
            android:id="@+id/specificsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specifics" />

        <TextView
            android:id="@+id/pricePerHourTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Per Hour" />

        <TextView
            android:id="@+id/totalPriceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price" />

        <TextView
            android:id="@+id/durationHoursTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration Hours" />

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location" />

        <TextView
            android:id="@+id/discountTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discount" />

        <TextView
            android:id="@+id/serviceProvidersTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service Providers" />

        <TextView
            android:id="@+id/eventTypesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Types" />

        <TextView
            android:id="@+id/bookingDeadlineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking Deadline" />

        <TextView
            android:id="@+id/cancellationDeadlineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancellation Deadline" />

        <TextView
            android:id="@+id/acceptanceModeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acceptance Mode" />

        <TextView
            android:id="@+id/availableTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Available" />

        <TextView
            android:id="@+id/visibleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Visible" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
