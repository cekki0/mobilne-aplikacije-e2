<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="Name" />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="Description" />

    <EditText
        android:id="@+id/editTextDiscount"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="Discount"
        android:inputType="number" />

    <EditText
        android:id="@+id/editTextEventType"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="Event Type" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="Price"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editTextBookingDeadline"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="Booking Deadline" />

    <EditText
        android:id="@+id/editTextCancellationDeadline"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="Cancellation Deadline" />

    <EditText
        android:id="@+id/imagesEditText"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:hint="Images" />

    <CheckBox
        android:id="@+id/checkBoxVisible"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:text="Visible" />




    <CheckBox
        android:id="@+id/checkBoxAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose services in package: "/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose products in package: "/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewForProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProducts"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_marginTop="16dp"
        android:visibility="invisible"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewServices"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="-200dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/buttonAddProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Product"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/buttonAddService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Service"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/buttonSaveChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:visibility="visible"/>


</LinearLayout>

</ScrollView>