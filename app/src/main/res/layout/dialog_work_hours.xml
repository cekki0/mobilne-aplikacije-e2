<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Hours"
        android:textSize="28sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/editTextMondayStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Start Time (HH:MM)"
        android:inputType="time"/>

    <EditText
        android:id="@+id/editTextMondayEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Time (HH:MM)"
        android:inputType="time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tue"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextTuesdayStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Start Time (HH:MM)"
            android:inputType="time"/>

        <EditText
            android:id="@+id/editTextTuesdayEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Time (HH:MM)"
            android:inputType="time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextWednesdayStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Start Time (HH:MM)"
            android:inputType="time"/>

        <EditText
            android:id="@+id/editTextWednesdayEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Time (HH:MM)"
            android:inputType="time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextThursdayStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Start Time (HH:MM)"
            android:inputType="time"/>

        <EditText
            android:id="@+id/editTextThursdayEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Time (HH:MM)"
            android:inputType="time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fri"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/editTextFridayStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Start Time (HH:MM)"
            android:inputType="time"/>

        <EditText
            android:id="@+id/editTextFridayEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="End Time (HH:MM)"
            android:inputType="time"/>
    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSaveWorkHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>